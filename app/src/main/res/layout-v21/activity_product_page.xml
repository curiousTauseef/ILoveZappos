<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sbadam2.pricechecker.ProductPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_name_textview_product_page"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:paddingTop="6dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/PImage"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/brand_name_textview_product_page"
        android:id="@+id/pBrandName"
        android:layout_below="@+id/PImage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:textColor="#060101"
        android:paddingStart="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/original_price_textview_product_page"
        android:id="@+id/pOrigPrice"
        android:layout_below="@+id/pBrandName"
        android:layout_alignParentStart="true"
        android:textColor="#060101"
        android:paddingStart="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/discount_textview_product_page"
        android:id="@+id/pDiscount"
        android:layout_below="@+id/pOrigPrice"
        android:layout_alignParentStart="true"
        android:textColor="#060101"
        android:paddingStart="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/final_price_textview_product_page"
        android:id="@+id/pFinalPrice"
        android:layout_below="@+id/pDiscount"
        android:textColor="#060101"
        android:paddingStart="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/BrandNameValue"
        android:layout_above="@+id/pOrigPrice"
        android:layout_toEndOf="@+id/pBrandName"
        android:textColor="#060101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/OrigPriceValue"
        android:layout_below="@+id/BrandNameValue"
        android:layout_toEndOf="@+id/pOrigPrice"
        android:textColor="#060101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/DiscountValue"
        android:layout_below="@+id/OrigPriceValue"
        android:layout_toEndOf="@+id/pDiscount"
        android:textColor="#060101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/FinalPriceValue"
        android:layout_below="@+id/DiscountValue"
        android:layout_toEndOf="@+id/pFinalPrice"
        android:textColor="#060101" />

    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/price2"
        android:layout_below="@+id/pFinalPrice"
        android:gravity="center"
        android:textColor="#060101" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigate_button_product_page"
        android:id="@+id/navigateButton"
        android:layout_below="@+id/price2"
        android:layout_centerInParent="true"
        android:onClick="navigateMe"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_me_button_product_page"
        android:id="@+id/Sharebutton"
        android:layout_below="@+id/navigateButton"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:onClick="shareMe"/>

    <LinearLayout
        android:id="@+id/ly_bar_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_addc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="28dp"
            android:src="@drawable/ic_done"
            android:elevation="6dp"/>

        <include layout="@layout/fab_layout" />

    </LinearLayout>

</RelativeLayout>
</ScrollView>